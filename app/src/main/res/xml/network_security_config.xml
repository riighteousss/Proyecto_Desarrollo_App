<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir comunicaci칩n HTTP (cleartext) para localhost y emulador Android -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Emulador Android usa 10.0.2.2 para referenciar localhost de la m치quina host -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Para desarrollo: permitir HTTP en todas las conexiones (solo para desarrollo) -->
    <!-- En producci칩n, eliminar esta secci칩n y usar solo HTTPS -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

